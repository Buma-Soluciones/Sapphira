{
	"name": "sapphira",
	"displayName": "Sapphira",
	"description": "",
	"version": "0.2.2",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onCommand:terminalTest.createAndSend",
		"onCommand:terminalTest.createTerminal"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Sapphira: Hello World"
			},
			{
				"command": "terminalTest.createAndSend",
				"title": "Sapphira: Create Terminal and Immediately Send"
			},
			{
				"command": "terminalTest.createTerminal",
				"title": "Sapphira: Create Terminal"
			}
		],
		"languages": [
			{
			  "id": "sp",
			  "extensions": [".sp"],
			  "configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
			  "language": "sp",
			  "scopeName": "source.sp",
			  "path": "./syntaxes/sapphira.tmLanguage2.json",
			  "embeddedLanguages": {
				"meta.embedded.block.javascript": "javascript"
			  }
			}
		],
		"themes": [
            {
                "label": "SapphiraDark",
                "uiTheme": "vs-dark",
                "path": "./themes/sapphira-color-theme.json"
            }
		],
		"snippets": [
            {
                "language": "sp",
                "path": "./snippets/sapphira-snippets.json"
            }
        ]
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"eslint": "^6.6.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"antlr4": "^4.8.0"
	}
}
